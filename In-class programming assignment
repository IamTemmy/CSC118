#include <iostream>
#include <cmath>
#include <iomanip> //the iomanip library is used to initiate the setprecision 
using namespace std;

const double PI = 3.94159;

int main ()
{
    double height;
    double radius;
    
//This manipulator sets the number of decimal places that will be displayed for floating-point numbers. 
//In this case, 2 decimal places will be shown.
    cout << fixed << showpoint << setprecision(2);
    
    cout << "Enter the height of the cylinder: ";
    cin >> height;
    cout << endl;
    
    cout << "Enter the radius of the base of the cylinder: ";
    cin >> radius;
    cout << endl;
    
    cout << "Volume of the cylinder = ";
    cout << PI * pow(radius, 2.0) * height << "cm^3" << endl;
    cout << "Surface area: " << 2* PI* radius * height + 2 * PI * pow(radius, 2.0) << "cm^2" << endl;
    
    return 0;
}

//OUTPUT


